{
  "name": "BNO055",
  "description": "9-DOF Absolute Orientation Sensor with sensor fusion, I2C interface",
  "category": "Sensor",
  "dim_width_mm": 21.0,
  "dim_height_mm": 25.0,
  "maybe_public": false,
  "ports": [
    {
      "name": "POWER",
      "description": "3.3V power supply",
      "category": "POWER",
      "connection_required": true,
      "direction": "input",
      "side": "l",
      "pin_mappings": [ "+3V3" ]
    },
    {
      "name": "GND",
      "description": "Ground connection",
      "category": "GND",
      "connection_required": true,
      "direction": "bidirectional",
      "side": "l",
      "pin_mappings": [ "GND" ]
    },
    {
      "name": "I2C",
      "description": "I2C communication interface",
      "category": "COMMUNICATION",
      "connection_required": true,
      "direction": "bidirectional",
      "side": "r",
      "pin_mappings": [ "SCL", "SDA" ]
    },
    {
      "name": "INTERRUPT",
      "description": "Interrupt output pin for data ready/event notification",
      "category": "DIGITAL",
      "connection_required": false,
      "direction": "output",
      "side": "r",
      "pin_mappings": [ "INT" ]
    },
    {
      "name": "RESET",
      "description": "Active-low reset input",
      "category": "DIGITAL",
      "connection_required": false,
      "direction": "input",
      "side": "r",
      "pin_mappings": [ "RESET" ]
    }
  ],
  "pins": [
    {
      "name": "+3V3",
      "description": "3.3V supply input",
      "direction": "input",
      "functions": [ "POWER_IN_3V3" ]
    },
    {
      "name": "GND",
      "description": "Ground reference",
      "direction": "bidirectional",
      "functions": [ "GND" ]
    },
    {
      "name": "INT",
      "description": "Interrupt output for host MCU",
      "direction": "output",
      "functions": [ "ALERT", "DATA_READY" ]
    },
    {
      "name": "RESET",
      "description": "Active-low reset pin",
      "direction": "input",
      "functions": [ "RESET" ]
    },
    {
      "name": "SCL",
      "description": "I2C clock line",
      "direction": "bidirectional",
      "functions": [ "I2C_SCL" ]
    },
    {
      "name": "SDA",
      "description": "I2C data line",
      "direction": "bidirectional",
      "functions": [ "I2C_SDA" ]
    }
  ]
}

